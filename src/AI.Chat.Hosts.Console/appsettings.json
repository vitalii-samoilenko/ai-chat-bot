{
  "NLog": {
    "Targets": {
      "Async": true,
      "TwitchLib": {
        "Type": "File",
        "FileName": "log/twitchlib.log"
      },
      "Common": {
        "Type": "File",
        "FileName": "log/common.log"
      },
      "Console": {
        "Type": "ColoredConsole"
      }
    },
    "Rules": [
      {
        "Logger": "TwitchLib.*",
        "MinLevel": "Info",
        "WriteTo": "TwitchLib",
        "Final": true
      },
      {
        "Logger": "AI.*",
        "MinLevel": "Info",
        "WriteTo": "Console",
        "Final": true
      },
      {
        "Logger": "Microsoft.Hosting.Lifetime",
        "MinLevel": "Info",
        "WriteTo": "Console",
        "Final": true
      },
      {
        "Logger": "*",
        "MinLevel": "Info",
        "WriteTo": "Common",
        "Final": true
      }
    ]
  },
  "Chat": {
    "Bot": {
      "Warnings": 3,
      "Apology": "Sorry, something went wrong, please try again.",
      "Filters": [
        {
          "Type": "Regex",
          "Args": [
            "/((https?:\\/\\/)?[^\\s.]+\\.[\\w][^\\s]+)"
          ],
          "Reason": "Reply should not contain links"
        },
        {
          "Type": "Regex",
          "Args": [
            "/(banword1|banword2)"
          ],
          "Reason": "These words are prohibited: banword1, banword2"
        },
        {
          "Type": "Length",
          "Args": [
            "400"
          ],
          "Reason": "Reply should be 400 symbols or shorted."
        }
      ]
    },
    "Moderator": {
      "Moderators": [
        "you"
      ],
      "Promoted": [
        "botusername"
      ],
      "Banned": [

      ],
      "Moderated": [

      ],
      "Welcomed": [

      ]
    },
    "Adapter": {
      "Type": "OpenAI",
      "Delay": "00:00:05",
      "Threshold": 82000,
      "Skip": 1,
      "Period": "24:00:00",
      "ApiKey": "your-api-key",
      "Model": "gemini-2.0-flash",
      "Client": {
        "Endpoint": "https://generativelanguage.googleapis.com/v1beta/openai/",
        "NetworkTimeout": "00:02:00"
      }
    },
    "Client": {
      "Type": "Twitch",
      "Username": "botusername",
      "Joined": "{0} has joined chat",
      "Prompt": "Message from {0}: {1}",

      "Delay": "00:00:10",
      "Welcome": {
        "Mode": "OnFirstMessage"
      },
      "Auth": {
        "Uri": "https://id.twitch.tv/oauth2/",
        "ClientId": "your-client-id",
        "ClientSecret": "your-client-secret",
        "Scopes": [
          "chat:read",
          "chat:edit"
        ]
      },
      "Communication": {
        "MessagesAllowedInPeriod": 750,
        "ThrottlingPeriod": "00:00:30"
      }
    }
  }
}
